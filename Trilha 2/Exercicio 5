import java.util.ArrayList;

public class Agenda {
    private ArrayList<String> compromissos;

    public Agenda() {
        this.compromissos = new ArrayList<>();
    }

    public void adicionarCompromisso(String compromisso) {
        compromissos.add(compromisso);
    }

    public void listarCompromissos() {
        if (compromissos.isEmpty()) {
            System.out.println("Não há compromissos na agenda.");
        } else {
            System.out.println("Compromissos:");
            for (String compromisso : compromissos) {
                System.out.println("- " + compromisso);
            }
        }
    }
}